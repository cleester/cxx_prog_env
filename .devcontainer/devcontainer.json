{
  "name": "workspace for basic C++ development",
  "dockerFile": "../Dockerfile",
  "containerEnv": {
    "HOST_HOME_DIR": "${localEnv:HOME}"
  },
  "appPort": [
    "8888:80"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "llvm-vs-code-extensions.vscode-clangd",
        "xaver.clang-format",
        "vadimcn.vscode-lldb@1.10.0",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "ms-vscode.live-server"
      ],
      "settings": {
        // Disable pyenv activation, which causes host python
        // paths to be incorrectly added to PATH
        "python.terminal.activateEnvInCurrentTerminal": false,
        "python.terminal.activateEnvironment": false
      }
    }
  },
  "portsAttributes": {
    "80": {
      "label": "View HTML Page",
      "onAutoForward": "openBrowser"
    }
  },
  "workspaceFolder": "/workspace",
  "overrideCommand": false,
  "capAdd": [
    "SYS_PTRACE"
  ],
  "securityOpt": [
    "seccomp=unconfined"
  ]
}
